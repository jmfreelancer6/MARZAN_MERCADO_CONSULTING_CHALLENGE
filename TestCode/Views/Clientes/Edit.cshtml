@model Domain.Core.Models.ClientesDTO

@{
    ViewData["Title"] = "Edit";
}


<div class="container-xl px-4 mt-4">
    <h1>Editar Cliente</h1>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-12">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Cliente # @Html.DisplayFor(model => model.No_Cliente)</div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="No_Cliente"></label>
                            <input class="form-control" asp-for="No_Cliente">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Nombre"></label>
                                <input class="form-control" asp-for="Nombre">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Apellido"></label>
                                <input class="form-control" asp-for="Apellido">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Telefono"></label>
                                <input class="form-control" asp-for="Telefono">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Direccion"></label>
                            <input class="form-control" asp-for="Direccion">
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <input type="submit" value="Editar Cliente" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-info float-right">Regresar</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
